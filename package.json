{
  "name": "@floroz/portfolio-v4",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "npm run generate:html",
    "build": "tsc -b && vite build",
    "lint": "run-s lint:* knip",
    "lint:code": "eslint .",
    "lint:types": "tsc --noEmit",
    "lint:format": "prettier --check .",
    "lint:style": "stylelint \"**/*.{css,scss}\" --ignore-pattern \"dist/**\"",
    "preview": "vite preview",
    "format": "prettier --write .",
    "knip": "knip",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:docker": "./scripts/playwright-docker.sh",
    "test:e2e:docker:update": "./scripts/playwright-docker.sh --update-snapshots",
    "generate:html": "npx tsx scripts/generate-html.ts",
    "generate:og-image": "npx tsx scripts/generate-og-image.ts",
    "prepare": "[ -n \"$CI\" ] && exit 0 || husky"
  },
  "dependencies": {
    "framer-motion": "^12.29.2",
    "lucide-react": "^0.563.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "knip": "^5.82.1",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.8.1",
    "sass": "^1.97.3",
    "stylelint": "^17.1.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "typescript-plugin-css-modules": "^5.2.0",
    "vite": "^7.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md,html}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ]
  }
}
